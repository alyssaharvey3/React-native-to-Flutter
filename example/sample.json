{
  "components": {
    "Button": {
      
        "baseStyle": {
            "borderRadius": "sm",
          
            "flexDirection": "row",
            "justifyContent": "center",
            "alignItems": "center",
            "_web": {
                "_disabled": {
                    "cursor": "not-allowed"
                },
                "_loading": {
                    "cursor": "not-allowed"
                },
                "cursor": "pointer",
                "userSelect": "none"
            },
            "_focusVisible": {
                "_web": {
                    "outlineWidth": "0",
                    "style": {
                        "boxShadow": "#22d3ee 0px 0px 0px 2px"
                    }
                }
            },
            "_dark": {
                "_focusVisible": {
                    "_web": {
                        "outlineWidth": "0",
                        "style": {
                            "boxShadow": "#06b6d4 0px 0px 0px 2px"
                        }
                    }
                }
            },
            "_stack": {
                "space": "1.5",
                "alignItems": "center"
            },
            "_loading": {
                "opacity": "40"
            },
            "_disabled": {
                "opacity": "40"
            },
            "_spinner": {
                "size": "sm",
                "focusable": false
            }
        },
        "variants": {
            "ghost": {
                "_text": {
                    "color": "primary.600"
                },
                "_icon": {
                    "color": "primary.600"
                },
                "_spinner": {
                    "color": "primary.600"
                },
                "_hover": {
                    "bg": "primary.600:alpha.10"
                },
                "_pressed": {
                    "bg": "primary.600:alpha.20"
                },
                "_dark": {
                    "_text": {
                        "color": "primary.500"
                    },
                    "_icon": {
                        "color": "primary.500"
                    },
                    "_spinner": {
                        "color": "primary.500"
                    },
                    "_hover": {
                        "bg": "primary.500:alpha.10"
                    },
                    "_pressed": {
                        "bg": "primary.500:alpha.20"
                    }
                }
            },
            "outline": {
                "borderWidth": "1px",
                "borderColor": "muted.300",
                "_text": {
                    "color": "primary.600"
                },
                "_icon": {
                    "color": "primary.600"
                },
                "_spinner": {
                    "color": "primary.600"
                },
                "_hover": {
                    "bg": "primary.600:alpha.10"
                },
                "_pressed": {
                    "bg": "primary.600:alpha.20"
                },
                "_dark": {
                    "borderColor": "muted.700",
                    "_text": {
                        "color": "primary.500"
                    },
                    "_icon": {
                        "color": "primary.500"
                    },
                    "_spinner": {
                        "color": "primary.500"
                    },
                    "_hover": {
                        "bg": "primary.500:alpha.10"
                    },
                    "_pressed": {
                        "bg": "primary.500:alpha.20"
                    }
                }
            },
            "solid": {
                "_text": {
                    "color": "text.50"
                },
                "_icon": {
                    "color": "text.50"
                },
                "_spinner": {
                    "color": "text.50"
                },
                "bg": "primary.600",
                "_hover": {
                    "bg": "primary.700"
                },
                "_pressed": {
                    "bg": "primary.800"
                },
                "_dark": {
                    "bg": "primary.600",
                    "_hover": {
                        "bg": "primary.700"
                    },
                    "_pressed": {
                        "bg": "primary.800"
                    }
                }
            },
            "subtle": {
                "bg": "primary.100",
                "_text": {
                    "color": "primary.900"
                },
                "_icon": {
                    "color": "primary.900"
                },
                "_spinner": {
                    "color": "primary.900"
                },
                "_hover": {
                    "bg": "primary.200"
                },
                "_pressed": {
                    "bg": "primary.300"
                },
                "_dark": {
                    "bg": "primary.300",
                    "_hover": {
                        "bg": "primary.200"
                    },
                    "_pressed": {
                        "bg": "primary.100"
                    }
                }
            },
            "link": {
                "_icon": {
                    "color": "primary.600"
                },
                "_spinner": {
                    "color": "primary.600"
                },
                "_hover": {
                    "_text": {
                        "textDecorationLine": "underline"
                    }
                },
                "_pressed": {
                    "_text": {
                        "color": "primary.800",
                        "textDecorationLine": "underline"
                    }
                },
                "_text": {
                    "color": "primary.600"
                },
                "_dark": {
                    "_text": {
                        "color": "primary.500"
                    },
                    "_pressed": {
                        "_text": {
                            "color": "primary.300"
                        }
                    }
                }
            }
        },
        "sizes": {
            "lg": {
                "px": "3",
                "py": "3",
                "_text": {
                    "fontSize": "md"
                },
                "_icon": {
                    "size": "md"
                }
            },
            "md": {
                "px": "3",
                "py": "2.5",
                "_text": {
                    "fontSize": "sm"
                },
                "_icon": {
                    "size": "sm"
                }
            },
            "sm": {
                "px": "3",
                "py": "2",
                "_text": {
                    "fontSize": "xs"
                },
                "_icon": {
                    "size": "sm"
                }
            },
            "xs": {
                "px": "3",
                "py": "2",
                "_text": {
                    "fontSize": "2xs"
                },
                "_icon": {
                    "size": "xs"
                }
            }
        },
        "defaultProps": {
            "variant": "solid",
            "size": "md",
            "colorScheme": "primary"
        }
    }
    }
}

